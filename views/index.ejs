<%- include("partials/header") %>



<% blogs.forEach(function(blog){ %>
<div>
    <h2><%= blog.title %></h2>
    <img src="<%= blog.image %>">
    <span><%= blog.created %></span>
    <p><%= blog.body.substr(1, 100) %>...</p>
    <a class="fluid ui button" href="/blogs/<%= blog._id %>">Read More</a>
<div/>
<%}) %>

<%- include("partials/footer") %>